{
    "name": "album-mosaic",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "start": "npm run dev",
        "dev": "vite",
        "build": "tsc -b && vite build",
        "format": "prettier -w **/*.ts **/*.tsx",
        "lint": "eslint .",
        "preview": "npm run build && vite preview",
        "split": "ts-node ./lib/split.ts",
        "update": "ts-node ./lib/update.ts",
        "validate": "ts-node ./lib/validate.ts",
        "deploy": "npm run build && wrangler deploy",
        "deploy-metadata:base": "wrangler r2 object put metadata/metadata.json --file build/metadata.json",
        "deploy-metadata:dev": "npm run deploy-metadata:base -- --local",
        "deploy-metadata": "npm run deploy-metadata:base -- --remote"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^7.1.0",
        "@fortawesome/free-brands-svg-icons": "^7.1.0",
        "@fortawesome/free-regular-svg-icons": "^7.1.0",
        "@fortawesome/free-solid-svg-icons": "^7.1.0",
        "@fortawesome/react-fontawesome": "^3.1.1",
        "@uidotdev/usehooks": "^2.4.1",
        "cache-parser": "^1.2.6",
        "clsx": "^2.1.1",
        "dotenv": "^17.2.3",
        "random": "^5.4.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-hot-toast": "^2.6.0"
    },
    "devDependencies": {
        "@cloudflare/vite-plugin": "^1.17.1",
        "@commander-js/extra-typings": "^14.0.0",
        "@eslint/js": "^9.36.0",
        "@types/cli-progress": "^3.11.6",
        "@types/fs-extra": "^11.0.4",
        "@types/luxon": "^3.7.1",
        "@types/node": "^24.6.0",
        "@types/react": "^19.1.16",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.0.4",
        "babel-plugin-react-compiler": "^19.1.0-rc.3",
        "cli-progress": "^3.12.0",
        "commander": "^14.0.2",
        "eslint": "^9.36.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.22",
        "fs-extra": "^11.3.2",
        "globals": "^16.4.0",
        "luxon": "^3.7.2",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.2",
        "sharp": "^0.34.5",
        "table": "^6.9.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.45.0",
        "vite": "^7.2.7",
        "wrangler": "^4.54.0"
    }
}
